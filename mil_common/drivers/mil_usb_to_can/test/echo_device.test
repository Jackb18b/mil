<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <param name="/is_simulation" value="True" />

  <node pkg="mil_usb_to_can" type="driver.py" name="usb_to_can_driver">
    <rosparam>
    device_handles:
      mil_usb_to_can.example.ExampleEchoDeviceHandle: [mil_usb_to_can.example.ExampleEchoResponsePacket]
    simulated_devices:
      mil_usb_to_can.example.ExampleSimulatedEchoDevice: [mil_usb_to_can.example.ExampleEchoRequestPacket]
    </rosparam>
  </node>

  <test test-name="can_echo_test" pkg="mil_usb_to_can" type="echo_device_test.py" time-limit="5.0"/>
</launch>
